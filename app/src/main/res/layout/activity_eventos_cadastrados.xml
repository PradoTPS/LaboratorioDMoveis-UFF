<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventosCadastrados">
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">

            <TextView
                android:id="@+id/cadastro_texto_ola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/botaoLogin"
                android:textStyle="bold"
                android:textSize="17sp"
                android:paddingTop="10dp"
                android:text="Olá, Aluno UFF!"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Este são seus eventos cadastrados!"
                android:textStyle="bold"
                android:paddingBottom="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="+"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:fontFamily="@string/common_google_play_services_enable_button"
                    android:onClick="cadastrarNovoEvento"
                    android:background="@drawable/botao_add"/>
            </LinearLayout>

            <!-- A RecyclerView with some commonly used attributes -->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/cadastado_recycle_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="abrirInfoCadastrado"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.constraint.ConstraintLayout>