<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Events"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="65dp"
            android:paddingRight="65dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/botaoLogin"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="OlÃ¡, Aluno UFF!"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descubra novos eventos hoje!"
                android:textStyle="bold"
                android:paddingBottom="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:textFontWeight="bold"
                android:onClick="cadastrarNovoEvento"
                android:background="@drawable/btn_adicionar_evento"/>
        </LinearLayout>
    </LinearLayout>

    <!-- A RecyclerView with some commonly used attributes -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="abrirInfo"/>

</LinearLayout>


